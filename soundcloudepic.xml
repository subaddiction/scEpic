<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
                       xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <ShortName>SCEpic</ShortName>
  <Description>Search epic sounds uploaded in the last year on SoundCloud</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Image width="16" height="16" type="image/x-icon">http://soundcloud.com/favicon.ico</Image>
  <Url type="text/html" method="method" template="https://soundcloud.com/search/sounds">
    <Param name="q" value="{searchTerms}"/>
    <Param name="filter.duration" value="epic"/>
    <Param name="filter.created_at" value="last_year"/>
  </Url>
  <moz:SearchForm>https://soundcloud.com/search/sounds</moz:SearchForm>
</OpenSearchDescription>
